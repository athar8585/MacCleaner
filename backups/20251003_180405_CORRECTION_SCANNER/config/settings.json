{
  "version": "3.1.0",
  "ui": {
    "accent_color": "#007AFF",
    "theme": "auto",
    "ios26_style": true,
    "animations": true,
    "transparency": true
  },
  "scheduler": {
    "enabled": true,
    "auto_clean_enabled": false,
    "smart_scheduling": true,
    "interval_minutes": 30,
    "schedule_time": "02:00",
    "schedule_days": [
      "monday",
      "thursday"
    ]
  },
  "thresholds": {
    "disk_space_alert": 10,
    "memory_alert": 85,
    "cache_size_alert": 5000,
    "temp_files_alert": 1000
  },
  "malware_scanner": {
    "enabled": true,
    "auto_update_database": true,
    "database_path": "database/malware_signatures.json",
    "malware_signatures_url": "https://raw.githubusercontent.com/Yara-Rules/rules/master/malware/APT_APT1.yar",
    "deep_scan": false,
    "quarantine_enabled": true
  },
  "database": {
    "enabled": true,
    "path": "database/mac_cleaner.db",
    "track_cleanings": true,
    "analytics": true,
    "export_enabled": true
  },
  "version_check_url": "https://api.github.com/repos/microsoft/vscode/releases/latest",
  "app_name": "MacCleaner Pro",
  "auto_update": true,
  "reports": {
    "html_enabled": true,
    "pdf_enabled": false,
    "export_dir": "exports"
  },
  "battery": {
    "min_percent_clean": 25,
    "skip_on_battery": true
  },
  "notifications": {
    "enabled": true,
    "show_completion": true,
    "show_alerts": true,
    "sound_enabled": true
  },
  "protection": {
    "icloud_protection": true,
    "important_files_protection": true,
    "recent_files_days": 7,
    "backup_before_clean": true
  },
  "feature_flags": {
    "enable_copilot_voice": true,
    "enable_inline_chat": true,
    "enable_gemini_2_5_pro": true
  }
}